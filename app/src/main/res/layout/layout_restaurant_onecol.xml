<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/restaurant_pic"
            android:src="@drawable/chicken"
            android:scaleType="fitXY"
            android:layout_marginBottom="3dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pizza_name"
                android:text="chicken"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/com_kakao_brown"

                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/restaurant_pic"
                android:layout_toLeftOf="@+id/food_image"
                android:layout_toRightOf="@+id/restaurant_pic"
                android:layout_toEndOf="@+id/restaurant_pic" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>